{
  "name": "carbon-addons-dotcom",
  "version": "0.0.0",
  "description": "This library is an extension of the Carbon IBM Design System. It contains unique components shared between the IBM.com user journeys to unify its look and feel.",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/IBM/carbon-addons-dotcom/issues"
  },
  "repository": "git@github.com:IBM/carbon-addons-dotcom.git",
  "keywords": [
    "carbon-design-system"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "ci-check": "npm run format:diff",
    "format": "prettier --write '**/*.{js,md,scss}'",
    "format:diff": "prettier --list-different '**/*.{js,md,scss}'",
    "format:staged": "prettier --write",
    "start": "parcel index.html --open --no-cache",
    "build": "parcel build index.html"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "carbon-components": "^10.1.0",
    "husky": "^1.3.1",
    "lerna": "^3.13.3",
    "lint-staged": "^8.1.5",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.17.0",
    "sass": "^1.19.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.js": [
      "yarn format:staged",
      "git add"
    ],
    "*.{scss,css}": [
      "yarn format:staged",
      "git add"
    ],
    "*.md": [
      "yarn format:staged",
      "git add"
    ]
  },
  "prettier": {
    "jsxBracketSameLine": true,
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {}
}
